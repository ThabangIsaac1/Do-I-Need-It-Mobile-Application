<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <EditText
        android:id="@+id/productName"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/fuel_orange"
        android:fontFamily="@font/gontserratbold"
        android:hint="productName" />

    <EditText
        android:id="@+id/productDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"
        android:hint="productDescription"
        android:backgroundTint="@color/fuel_orange"
        android:fontFamily="@font/gontserratbold"/>
    <EditText
        android:id="@+id/productPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:hint="productPrice"
        android:backgroundTint="@color/fuel_orange"
        android:fontFamily="@font/gontserratbold"/>
    <EditText
        android:id="@+id/productSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="WebsiteUrl"
        android:backgroundTint="@color/fuel_orange"
        android:fontFamily="@font/gontserratbold"/>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
  >

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="213dp"
        android:layout_height="152dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.428" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="116dp"
        android:layout_height="145dp"
        android:background="@null"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/productImage"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_add_location_alt_24"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/upload"
        android:layout_width="101dp"
        android:layout_height="55dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppinssemibold"
        android:text="Submit"
        android:textColor="@color/black"

        />


</LinearLayout>