<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ProductDetails"
    android:background="@color/black"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="22dp"
            tools:layout_editor_absoluteX="10dp">

            <ImageView
                android:id="@+id/imagesdisplay"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/four"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/displayproductname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="260dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="@string/product_name"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/displayproducturl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="320dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="@string/website_link"
                android:textColor="@color/white"
                android:autoLink="web" />

            <fragment
                android:id="@+id/display_item_location"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginTop="360dp"/>

            <ImageButton
                android:id="@+id/deletebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_delete_outline_24"
                tools:ignore="VectorDrawableCompat"
                android:background="@null"
                android:layout_marginTop="580dp"/>

            <ImageButton
                android:id="@+id/sharebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_share_24"
                android:layout_marginLeft="48dp"
                tools:ignore="VectorDrawableCompat"
                android:background="@null"
                android:layout_marginTop="580dp"/>

            <Button
                android:id="@+id/purchased_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="600dp"
                android:layout_marginLeft="250dp"
                android:text="Purchased"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"/>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>